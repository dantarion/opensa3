<Window x:Class="Tabuu.UI.ModelViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModelViewerWindow" Height="300" Width="336" MinWidth="336" Closing="Window_Closing">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" >
            <Label Content="N/A" Name="label" Width="100" VerticalAlignment="Center"/>
            <CheckBox Name="Loop" Content="Loop?" VerticalAlignment="Center" IsChecked="True" />
            <Button Content="Play" Margin="5" Padding="20 5 " Click="Button_Click" />
            <Button Content="Stop" Margin="5" Padding="20 5 " Click="Button_Click_1" />
        </WrapPanel>       
        <Slider Margin="10" DockPanel.Dock="Bottom" Name="slider" TickPlacement="Both" ValueChanged="slider_ValueChanged" />
        <WindowsFormsHost Name="windowsFormsHost1"/>        
    </DockPanel>
</Window>
